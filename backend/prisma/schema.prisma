generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model OSHRule {
  id         String      @id @default(uuid())
  ruleNumber String      @unique
  title      String
  content    String      @db.Text
  keywords   String[]
  amendments Amendment[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Amendment {
  id            String    @id @default(uuid())
  type          String    // "DO", "LA", "DA"
  number        String    // "252"
  series        String    // "2025"
  title         String?
  description   String    @db.Text
  effectiveDate DateTime?
  ruleId        String?
  rule          OSHRule?  @relation(fields: [ruleId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model InterviewSession {
  id        String     @id @default(uuid())
  startedAt DateTime   @default(now())
  endedAt   DateTime?
  exchanges Exchange[]
}

model Exchange {
  id         String           @id @default(uuid())
  sessionId  String
  session    InterviewSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  question   String           @db.Text
  answer     String           @db.Text
  confidence Float
  language   String           // "en", "tl", "taglish"
  responseMs Int              // Response time tracking
  timestamp  DateTime         @default(now())
}

model CachedAnswer {
  id           String   @id @default(uuid())
  questionHash String   @unique
  question     String   @db.Text
  answer       String   @db.Text
  confidence   Float
  hitCount     Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Reviewer App Enums
enum DifficultyLevel {
  EASY
  MEDIUM
  HARD
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  OPEN_ENDED
  SCENARIO_BASED
}

// Reviewer App Models
model ReviewerSession {
  id             String             @id @default(uuid())
  startedAt      DateTime           @default(now())
  endedAt        DateTime?
  difficulty     DifficultyLevel    @default(MEDIUM)
  questionTypes  QuestionType[]
  focusAreas     String[]           // Rule numbers, DOs, LAs
  totalQuestions Int
  timeLimitPerQ  Int?               // Seconds (null = untimed)
  language       String             @default("en")
  questions      ReviewerQuestion[]
  score          Float?
  completedCount Int                @default(0)
}

model ReviewerQuestion {
  id             String          @id @default(uuid())
  sessionId      String
  session        ReviewerSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  questionText   String          @db.Text
  questionType   QuestionType
  difficulty     DifficultyLevel
  sourceRule     String
  options        Json?           // For multiple choice: ["A", "B", "C", "D"]
  correctIndex   Int?            // For multiple choice: 0-3
  correctAnswer  Boolean?        // For true/false
  expectedAnswer String?         @db.Text // For open-ended
  keyPoints      String[]        // Key points to check in open-ended answers
  userAnswer     String?         @db.Text
  userAnswerAt   DateTime?
  timeSpentSec   Int?
  isCorrect      Boolean?
  score          Float?          // 0-1 for partial credit
  feedback       String?         @db.Text
  questionOrder  Int
  createdAt      DateTime        @default(now())
}

// =====================================================
// Legal Document Knowledge Base (Hybrid Search)
// =====================================================

enum LawType {
  RA          // Republic Act
  OSHS_RULE   // OSHS Rule
  DO          // Department Order
  LA          // Labor Advisory
  DA          // Department Advisory
}

enum SectionStatus {
  CURRENT
  AMENDED
  SUPERSEDED
  REPEALED
}

// Legal document (RA, OSHS Rule, DO, LA, DA)
model Law {
  id               String         @id @default(uuid())
  lawId            String         @unique // "ra11058", "rule1030", "do252"
  type             LawType
  name             String         // "Republic Act No. 11058"
  shortName        String         // "RA 11058"
  title            String         @db.Text // Full title
  description      String?        @db.Text
  effectiveDate    DateTime?
  dateApproved     DateTime?
  datePublished    DateTime?
  status           SectionStatus  @default(CURRENT)
  keywords         String[]
  sections         LegalSection[]
  amendments       LegalAmendment[] @relation("AmendingLaw")
  amendedBy        LegalAmendment[] @relation("AmendedLaw")
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

// Section within a legal document (atomic unit for search)
model LegalSection {
  id               String                @id @default(uuid())
  sectionId        String                @unique // "ra11058-s28-p1"
  sectionNumber    String                // "Section 28", "Rule 1031.01"
  title            String?
  lawId            String
  law              Law                   @relation(fields: [lawId], references: [id], onDelete: Cascade)
  chapterId        String?
  chapterTitle     String?
  articleId        String?
  articleTitle     String?
  content          String                @db.Text // Full legal text
  contentPlain     String                @db.Text // Plain text for search
  topicTags        String[]
  effectiveDate    DateTime?
  status           SectionStatus         @default(CURRENT)
  embedding        Unsupported("vector(1536)")? // OpenAI embedding
  keyTerms         String[]
  numericalValues  NumericalValue[]
  originalSection  SectionAmendment[]    @relation("OriginalSection")
  amendedSection   SectionAmendment[]    @relation("AmendedSection")
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt

  @@index([lawId])
  @@index([sectionNumber])
  @@index([status])
  @@index([topicTags])
}

// Numerical values extracted from legal text
model NumericalValue {
  id           String       @id @default(uuid())
  sectionId    String
  section      LegalSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  value        Float
  unit         String       // "PHP", "hours", "days", "workers", "percent"
  context      String       // "penalty for first offense"
  createdAt    DateTime     @default(now())

  @@index([value])
  @@index([unit])
}

// Track amendments between sections
model SectionAmendment {
  id                 String       @id @default(uuid())
  originalSectionId  String
  originalSection    LegalSection @relation("OriginalSection", fields: [originalSectionId], references: [id])
  amendedSectionId   String
  amendedSection     LegalSection @relation("AmendedSection", fields: [amendedSectionId], references: [id])
  changeType         String       // "modified", "added", "deleted", "superseded"
  changeSummary      String       @db.Text
  effectiveDate      DateTime?
  createdAt          DateTime     @default(now())
}

// Track amendments between laws
model LegalAmendment {
  id               String    @id @default(uuid())
  amendingLawId    String
  amendingLaw      Law       @relation("AmendingLaw", fields: [amendingLawId], references: [id])
  amendedLawId     String
  amendedLaw       Law       @relation("AmendedLaw", fields: [amendedLawId], references: [id])
  description      String    @db.Text
  effectiveDate    DateTime?
  createdAt        DateTime  @default(now())
}
